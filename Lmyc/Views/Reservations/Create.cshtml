@model Lmyc.Models.Reservation

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BoatId" class="control-label"></label>
                <select asp-for="BoatId" class="form-control" asp-items="ViewBag.Boat"></select>
            </div>
            <div class="form-group">
                <label asp-for="StartDateTime" class="control-label"></label>
                <input asp-for="StartDateTime" class="form-control" />
                <span asp-validation-for="StartDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDateTime" class="control-label"></label>
                <input asp-for="EndDateTime" class="form-control" />
                <span asp-validation-for="EndDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NonMemberCrew" class="control-label"></label>
                <input class="form-control" id=""/>
                <span asp-validation-for="NonMemberCrew" class="text-danger"></span>
                <input type="hidden" value="" asp-for="NonMemberCrew" id="nonMembers"/>
                <a id="addToNonCrew" class="btn btn-default">Add to crew</a>
            </div>

            <div class="form-group">
                <label asp-for="Itinerary" class="control-label"></label>
                <input asp-for="Itinerary" class="form-control" />
                <span asp-validation-for="Itinerary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AllocatedHours" class="control-label"></label>
                <input asp-for="AllocatedHours" class="form-control" />
                <span asp-validation-for="AllocatedHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberCrew" class="control-label"></label>
                <select class="form-control" asp-items="ViewBag.MemberCrew"></select>
                <input asp-for="MemberCrew" type="hidden" value="" id="members"/>
                <a id="addToCrew" class="btn btn-default">Add to crew</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


